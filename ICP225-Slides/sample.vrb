\frametitle{Demonstração: Tratando Arquivo Corrompido}

    \begin{block}{Código de Tratamento}
        \begin{verbatim}
try:
    f = open("arquivo-corrompido.txt", "r")
    conteudo = f.read()
    f.close()
    print(conteudo)
except IOError:
    print("Erro: Problema ao ler o arquivo")
\end{verbatim}
    \end{block}


